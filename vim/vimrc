" Key bindings {{{
let s:activatedh = 0 
function! ToggleH()
  if s:activatedh == 0
    let s:activatedh = 1 
    match ErrorMsg '\(\%>80v.\+\|\s\+$\)'
  else
    let s:activatedh = 0 
    match none
  endif
endfunction

imap ^_ <esc>wdbi

let mapleader="\<SPACE>"

map :Q :q
map :W :w
map :WQ :wq

set pastetoggle=<F12>
map <F5> :e <CR>
map <F4> :RainbowToggle <CR>
map <F2> :NERDTreeToggle <CR>
